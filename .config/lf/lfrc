set scrolloff 5

# execute current file (must be executable)
map x $$f
map X !$f

cmd delete ${{
    trash-put "$fx"
}}

map <delete> delete

cmd open ${{
   case $(file --mime-type $f -b) in
       text/*) $EDITOR $fx;;
       *) for f in "$fx"; do setsid xdg-open "$f" > /dev/null 2> /dev/null & done;;
   esac
}}

set previewer ~/.config/lf/scope.sh

# vim:ft=cfg
